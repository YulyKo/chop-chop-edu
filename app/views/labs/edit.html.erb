<h1 class="text-center mb-3 pt-3">Редагувати лекцію</h1>
<%=  form_for @lab, url: {action: "update"} do |form|  %>
  <div class="container">
    <div class="form-group">
      <label for="exampleInputEmail1">Тема лекції</label>
      <%= form.text_field :theme_name %>
      <small id="emailHelp" class="form-text text-muted">Введіть повну тему лабораторної роботи</small>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Мета</label>
      <%= form.text_field :goal %>
      <small id="emailHelp" class="form-text text-muted pb-2">Введіть ІD тесту</small>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">ID предмету</label>
      <%= form.number_field :subject_theme_id %>
      <small id="emailHelp" class="form-text text-muted">Введіть ІD предмету</small>
    </div>

    <div class="form-group">
      <label for="exampleFormControlTextarea1">Лекція</label>
      <%= form.text_area :text, :rows => '10', :class => 'form-control' %>
    </div>

    <%= form.submit :class => 'btn btn-success', :value => 'Редагувати лабораторну роботу' %>
  </div>
<% end %>